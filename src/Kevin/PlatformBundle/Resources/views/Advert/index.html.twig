{% extends "KevinPlatformBundle::layout.html.twig" %}

{% block title %}

    Accueil - {{ parent() }}

{% endblock %}

{% block kevinplatform_body %}

    <h2>Liste des annonces</h2>
    <ul>
    {% for advert in advertsList %}
        <li>
            <a href="{{ path('kevin_platform_view', {'id' : advert.id}) }}">{{ advert.title }}</a>
            par {{ advert.author }} le {{ advert.date|date('d/M/y') }}
        </li>
    {% else %}
        <p>Aucune annonce Ã  afficher</p>
    {% endfor %}
    </ul>

    <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}>
                <a href="{{ path('kevin_platform_home', {'page': p}) }}">{{ p }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}